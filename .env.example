# API Configuration
PORT=3000
NODE_ENV=development

# Anthropic Claude API (OBRIGATÓRIO — usar chave real!)
# Opus 4.5 para análise tributária, Sonnet 4.5 para documentos
ANTHROPIC_API_KEY=your_api_key_here

# OCR.space (para PDFs escaneados — grátis até 25k páginas/mês)
# Obtenha em: https://ocr.space/ocrapi
OCR_SPACE_API_KEY=sua_chave_ocr_space
ENABLE_TESSERACT_FALLBACK=false

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/taxcredit"
DIRECT_URL="postgresql://postgres:password@localhost:5432/taxcredit"

# Redis (opcional — worker de filas)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (GERAR UM SECRET FORTE!)
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_in_production

# Admin (senha para autorizar negociações de comissão fora do padrão 40%)
ADMIN_AUTH_PASSWORD=senha_admin_forte

# Platform Partner (senha interna — não precisa memorizar)
PLATFORM_PARTNER_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10

# Worker Configuration
WORKER_CONCURRENCY=5

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000
CUSTOM_DOMAIN_URL=

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=noreply@seudominio.com

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Dados PIX da Plataforma (exibido para clientes pagarem taxa de adesao)
PLATFORM_PIX_BANK=C6 Bank
PLATFORM_PIX_KEY=sua_chave_pix_aqui
PLATFORM_PIX_KEY_TYPE=CNPJ
PLATFORM_ACCOUNT_HOLDER=ATOM BRASIL DIGITAL LTDA
